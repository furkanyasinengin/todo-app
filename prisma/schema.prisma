generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model User {
  id    String     @id @default(cuid())
  email String  @unique
  name  String?
  password  String
  createdAt DateTime @default(now())
  
  createdTodos Todo[] @relation("TodoAuthor")
  assignedTodos Todo[] @relation("TodoAssignees")
}

model Todo {
  id        String     @id @default(cuid())
  title     String
  description   String?
  priority Priority @default(MEDIUM)
  category String
  isCompleted Boolean @default(false)
  dueDate DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  authorId  String
  author    User    @relation("TodoAuthor",fields: [authorId], references: [id])
  assignees User[] @relation("TodoAssignees")
}
